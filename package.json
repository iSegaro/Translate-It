{
  "name": "translate-it",
  "version": "1.0.0",
  "type": "module",
  "description": "Smart Translation Assistant",
  "scripts": {
    "build": "node scripts/build/build-all.mjs",
    "build:chrome": "node scripts/build/build-chrome.mjs",
    "build:firefox": "node scripts/build/build-firefox.mjs",
    "dev:chrome": "cross-env NODE_ENV=development vite build --config config/vite/vite.config.chrome.js && echo '✅ Development build ready. Load extension from dist/chrome/Translate-It-v0.10.0/'",
    "dev:firefox": "cross-env NODE_ENV=development vite build --config config/vite/vite.config.firefox.js && echo '✅ Development build ready. Load extension from dist/firefox/Translate-It-v0.10.0/'",
    "dev:watch:chrome": "cross-env NODE_ENV=development vite build --config config/vite/vite.config.chrome.js --watch --force",
    "dev:watch:firefox": "cross-env NODE_ENV=development vite build --config config/vite/vite.config.firefox.js --watch --force",
    "serve:chrome": "cross-env NODE_ENV=development vite --config config/vite/vite.config.chrome.js",
    "serve:firefox": "cross-env NODE_ENV=development vite --config config/vite/vite.config.firefox.js",
    "watch:chrome": "cross-env NODE_ENV=development VITE_WATCH_MODE=true vite build --config config/vite/vite.config.chrome.js --watch",
    "watch:firefox": "cross-env NODE_ENV=development VITE_WATCH_MODE=true vite build --config config/vite/vite.config.firefox.js --watch",
    "validate": "node scripts/validate/validate-all.mjs",
    "validate:chrome": "node scripts/validate/validate-chrome.mjs",
    "validate:firefox": "node scripts/validate/validate-firefox.mjs",
    "source": "node scripts/dev/create-source-zip.mjs",
    "publish": "pnpm run build && pnpm run validate && pnpm run source",
    "pre-submit": "pnpm run lint && pnpm run test:vue:run && pnpm run build",
    "lint:source": "eslint --config eslint.config.js",
    "lint": "pnpm run lint:source",
    "format": "prettier --write src/**/*.js",
    "test:vue": "vitest --config config/test/vitest.config.js",
    "test:vue:ui": "vitest --ui --config config/test/vitest.config.js",
    "test:vue:run": "vitest run --config config/test/vitest.config.js",
    "test:vue:coverage": "vitest run --coverage --config config/test/vitest.config.js",
    "test:e2e": "playwright test --config config/test/playwright.config.js",
    "test:e2e:ui": "playwright test --ui --config config/test/playwright.config.js",
    "test:e2e:debug": "playwright test --debug --config config/test/playwright.config.js",
    "analyze": "node scripts/dev/analyze-bundles.js",
    "perf:monitor": "node scripts/dev/performance-monitor.js",
    "setup": "node scripts/setup/setup.js",
    "setup:chrome-validator": "pnpm add -D web-ext && echo '✅ Chrome validator installed! You can now use: pnpm run validate:chrome'"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/eslint-parser": "^7.27.1",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/preset-env": "^7.26.9",
    "@eslint/js": "^9.31.0",
    "@playwright/test": "^1.54.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "addons-linter": "^7.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "eslint-plugin-vue": "^9.27.0",
    "fs-extra": "^11.3.0",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "postcss-preset-env": "^10.2.4",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.89.2",
    "sass-embedded": "^1.89.2",
    "vite": "^7.0.5",
    "vite-plugin-web-extension": "^4.4.5",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^9.4.3",
    "vue-i18n": "^11.1.11",
    "web-ext": "^8.9.0"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "@vueuse/core": "^13.5.0",
    "archiver": "^7.0.1",
    "chalk": "^5.4.1",
    "core-js": "^3.41.0",
    "dompurify": "^3.2.6",
    "glob": "^11.0.1",
    "marked": "^16.1.1",
    "pinia": "^3.0.3",
    "regenerator-runtime": "^0.14.1",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "vue-sonner": "^2.0.8",
    "webextension-polyfill": "^0.12.0",
    "xss": "^1.0.15"
  }
}